@using BookVerse.ViewModels.Book
@model BookDetailsViewModel

@{
    ViewData["Title"] = "Book Details";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row justify-content-center" style="margin: 0 auto; max-width: 800px;">
    <div class="col-md-4 text-center">
        @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
        {
            <img src="@Model.CoverImageUrl" class="img-fluid" style="max-width: 100%; height: auto;" alt="@Model.Title" />
        }
        else
        {
            <img src="~/images/default-image.jpg" class="img-fluid" style="max-width: 100%; height: auto;" alt="No Image Available" />
        }
    </div>

    <div class="col-md-8">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <hr />
            <p class="card-text">@Model.Description</p>
            <hr />
            <p class="card-text"><small class="text-muted">Genre: @Model.Genre</small></p>
            <p class="card-text"><small class="text-muted">Published On: @Model.PublishedOn.ToString("dd/MM/yyyy")</small></p>
            <p class="card-text"><small class="text-muted">Publisher: @Model.Publisher</small></p>
            <hr />
        </div>
        <div class="card-footer text-center">
            <div class="d-flex justify-content-between align-items-center">
                <a asp-controller="Book" asp-action="Index"
                   class="btn btn-warning d-flex justify-content-center align-items-center flex-fill mx-1">
                    <i class="fas fa-arrow-left"></i> Back
                </a>

                @if (User?.Identity?.IsAuthenticated == true && Model is { IsAuthor: false,IsSaved: false })
                {
                    <form asp-controller="Book" asp-action="AddToMyBooks" asp-route-bookId="@Model.Id" method="post">
	                    <button type="submit" class="btn btn-success">
                            <i class="fas fa-book"></i> My Books
                        </button>
                    </form>
                }

                @if (Model.IsAuthor)
                {
                    <a asp-controller="Book" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary d-flex justify-content-center align-items-center flex-fill mx-1">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-controller="Book" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger d-flex justify-content-center align-items-center flex-fill mx-1">
                        <i class="fas fa-trash"></i> Delete
                    </a>
                }
            </div>
        </div>
    </div>
</div>